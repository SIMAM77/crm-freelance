{% extends "adminBase.html.twig" %}
{% block title %}Client{% endblock %}

{% block body %}

    <form method="post" action="/edit-client?id={{ client.id }}">
        <nav class="nav">
            <div class="nav-wrap">
                
            </div>
        </nav>

        <section class="introduction container">
            <div class="user_details">
                <div class="user_details-logo">
                    <img src="../assets/upload/{{ client.picture }}" alt="image de {{ client.firstname }}">
                </div>
                <div class="user_details-name">
                    <input type="text" name="lastname" id="lastname" aria-label="Name" placeholder="Nom" value="{{ client.lastname }}" >
                    <input type="text" name="firstname" id="firstname" aria-label="Name" placeholder="Nom" value="{{ client.firstname }}" >
                </div>

                    <input type="hidden" name="picture" value="{{ client.picture }}" >
                        

                <div class="user_details-firme">
                    <input type="text" name="company" id="company" aria-label="Society" placeholder="Société" value="{{ client.company }}">
                </div>         
            </div>
            <div class="user_details">
                <div class="user_details-wrap">
                    <div class="user_details-infos">
                        <input type="text" name="email" id="email" aria-label="email" placeholder="Email" value="{{ client.email }}">
                    </div>
                    <div class="user_details-infos">
                        <input type="text" name="phone_number" id="phone" aria-label="phone" placeholder="téléphone portable" value="{{ client.phone_number }}">
                    </div>
                    <div class="user_details-infos">
                        <input type="text" name="address" id="address" aria-label="address" placeholder="address" value="{{ client.address }}">
                    </div>
                </div>
                
            </div>
           
            <div class="user_details-humeur">
                <div class="user_details-humeur--wrapper">
                    <div class="user_details-humeur--title">
                        <h2>Humeur Current</h2> 
                    </div>
                    <div class="user_details-humeur--emoji">

                        <label>
                            <img src="../assets/img-content/unhappy.png" alt="pas content">
                            <input type="radio" value="0" />
                        </label>

                        <label>
                            <img src="../assets/img-content/neutral.png" alt="neutre" />
                            <input type="radio" value="1" />
                        </label>

                        <label>
                            <img src="../assets/img-content/happy.png" alt="content">
                            <input type="radio" value="2" />
                        </label>
                    </div>
                    <input type="hidden" name="last_happiness" value="{{ client.last_happiness }}" >
                

                </div>

                <div class="user_details-humeur--wrapper">
                    <div class="user_details-humeur--title">
                        <h2>Budget moyen</h2> 
                    </div>
                    <input type="hidden" name="budget" value="{{ client.budget }}" >
                    
                    <div class="user_details-humeur--cursor">
                        <img src="../assets/img-content/BarreProgressBudget.svg" alt="">
                        <img src="../assets/img-content/money.png" alt="" class="money">
                    </div>
                </div>
                <div class="user_details-humeur--wrapper">
                    <div class="user_details-humeur--title">
                        <h2>Négociation statut</h2> 
                    </div>
                    <div class="user_details-humeur--cursor">
                        <img src="../assets/img-content/BarreProgressNego.png" alt="">
                        <img src="../assets/img-content/rocket.png" alt="" class="rocket">
                    </div>
                </div>

                <div class="user_details-birthday--wrapper">
                    <div class="user_details-birthday--title">
                        <h2>Birthday</h2> 
                    </div>
                    <div class="user_details-birthday">
                        <div>
                        {# <input type="date" name="date_of_birth" value="{{ client.date_of_birth }}" /> #}
                        </div>
                    </div>

                    <div class="user_details-notes">
                        <h2>Notes diverses</h2>
                        <textarea class="notes" name="notes" id="" cols="30" rows="10">{{ client.notes }}</textarea>
                    </div>
                </div>
            </div>
<input type="submit" class="btn" value="Modifier">
        </section>
    </form>
{% endblock %}
