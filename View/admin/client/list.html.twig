{% extends "adminBase.html.twig" %}
{% block title %}Clients{% endblock %}

{% block body %}

    <h1>ICI NOS CLIENTS</h1>
    <a href="/add-client">+</a>
    <br /><br />

    {% for cl in clients %}
        <a href="/client?id={{ cl.id }}">
        {{ cl.company }}
        <hr />
        {{ cl.firstname }} {{ cl.lastname }}
        </a>

        {% if cl.happiness == 0 %}
            pas content
        {% else %}
            {% if cl.happiness == 1 %}
                moyen content
            {% else %}
                content
            {% endif %}
        {% endif %}
    {% endfor %}

    <br />
    <br />

    {{ clients|length }} contacts
{% endblock %}
